# =============================================================================
# Nexus Configuration
# Copy this to .env and fill in your values
# =============================================================================

# PostgreSQL
POSTGRES_USER=nexus
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD
POSTGRES_DB=nexus
POSTGRES_PORT=5432

# NocoDB
NOCODB_PORT=8080
NC_JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_STRING
NC_PUBLIC_URL=http://localhost:8080

# Optional: pgAdmin (start with: docker compose --profile admin up -d)
PGADMIN_EMAIL=admin@nexus.local
PGADMIN_PASSWORD=CHANGE_ME
PGADMIN_PORT=5050

# Timezone
TZ=America/New_York

# =============================================================================
# Backup Configuration (Optional)
# =============================================================================

# Remote backup to NAS
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_HOST=nas
REMOTE_BACKUP_PATH=/Volume2/Backups/nexus
REMOTE_BACKUP_USER=rafa

# Email notifications on backup
BACKUP_NOTIFY_ENABLED=false
BACKUP_NOTIFY_URL=http://172.17.0.1:8025/send-email
BACKUP_NOTIFY_EMAIL=your@email.com
