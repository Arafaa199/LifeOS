{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-reminders.json",
  "title": "Reminders Response",
  "description": "Reminders in date range",
  "type": "object",
  "required": ["success", "reminders"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "reminders": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "integer" },
          "reminder_id": { "type": ["string", "null"] },
          "title": { "type": "string" },
          "notes": { "type": ["string", "null"] },
          "due_date": { "type": ["string", "null"], "format": "date" },
          "is_completed": { "type": "boolean" },
          "completed_date": { "type": ["string", "null"], "format": "date" },
          "priority": { "type": ["integer", "null"], "minimum": 0, "maximum": 9 },
          "list_name": { "type": ["string", "null"] }
        }
      }
    }
  }
}
