{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-reminder-update-request.json",
  "title": "Reminder Update Request",
  "description": "Update an existing reminder",
  "type": "object",
  "required": ["id"],
  "properties": {
    "id": { "type": "integer" },
    "reminder_id": { "type": ["string", "null"], "description": "EventKit UUID" },
    "title": { "type": ["string", "null"] },
    "notes": { "type": ["string", "null"] },
    "due_date": { "type": ["string", "null"], "format": "date" },
    "is_completed": { "type": ["boolean", "null"] },
    "completed_date": { "type": ["string", "null"], "format": "date" },
    "priority": { "type": ["integer", "null"], "minimum": 0, "maximum": 9 }
  }
}
