{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-recurring.json",
  "title": "Recurring Items Response",
  "description": "Recurring items (bills, subscriptions)",
  "type": "object",
  "required": ["success", "data"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "amount", "type", "cadence"],
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "amount": { "type": "number" },
          "currency": { "type": "string", "default": "AED" },
          "type": { "type": "string", "enum": ["expense", "income"] },
          "cadence": { "type": "string", "enum": ["daily", "weekly", "biweekly", "monthly", "quarterly", "yearly"] },
          "day_of_month": { "type": ["integer", "null"], "minimum": 1, "maximum": 31 },
          "day_of_week": { "type": ["integer", "null"], "minimum": 0, "maximum": 6 },
          "next_due_date": { "type": ["string", "null"], "format": "date" },
          "last_occurrence": { "type": ["string", "null"], "format": "date" },
          "category_id": { "type": ["integer", "null"] },
          "merchant_pattern": { "type": ["string", "null"] },
          "is_active": { "type": "boolean" },
          "auto_create": { "type": "boolean" },
          "notes": { "type": ["string", "null"] },
          "created_at": { "type": ["string", "null"], "format": "date-time" },
          "updated_at": { "type": ["string", "null"], "format": "date-time" },
          "category_name": { "type": ["string", "null"] },
          "category_icon": { "type": ["string", "null"] },
          "days_until_due": { "type": ["integer", "null"] }
        }
      }
    }
  }
}
