{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-budgets-request.json",
  "title": "Budget Request",
  "description": "Create or update a budget (UPSERT by month+category)",
  "type": "object",
  "required": ["month", "category", "budget_amount"],
  "properties": {
    "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$", "description": "YYYY-MM format" },
    "category": { "type": "string" },
    "budget_amount": { "type": "number", "minimum": 0 },
    "category_id": { "type": ["integer", "null"] },
    "notes": { "type": ["string", "null"] }
  }
}
