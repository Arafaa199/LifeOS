{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-transaction-request.json",
  "title": "Transaction Request",
  "description": "Structured transaction logging",
  "type": "object",
  "required": ["merchant_name", "amount", "client_id"],
  "properties": {
    "merchant_name": { "type": "string", "minLength": 1 },
    "amount": { "type": "number", "description": "Negative for expenses, positive for income" },
    "category": { "type": ["string", "null"] },
    "notes": { "type": ["string", "null"] },
    "date": { "type": ["string", "null"], "format": "date" },
    "client_id": { "type": "string", "format": "uuid", "description": "Idempotency key" }
  }
}
