{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-finance-summary.json",
  "title": "Finance Summary Response",
  "description": "Finance summary including today's spend, MTD totals, transactions, budgets",
  "type": "object",
  "required": ["success", "data"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "data": {
      "type": "object",
      "required": ["total_spent", "currency"],
      "properties": {
        "total_spent": { "type": "number" },
        "grocery_spent": { "type": ["number", "null"] },
        "eating_out_spent": { "type": ["number", "null"] },
        "currency": { "type": "string", "default": "AED" },
        "total_income": { "type": ["number", "null"] },
        "mtd_spend": { "type": ["number", "null"] },
        "recent_transactions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/transaction"
          }
        },
        "budgets": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/budget"
          }
        },
        "category_breakdown": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    }
  },
  "$defs": {
    "transaction": {
      "type": "object",
      "required": ["id", "date", "amount"],
      "properties": {
        "id": { "type": "integer" },
        "date": { "type": "string", "format": "date" },
        "merchant_name": { "type": ["string", "null"] },
        "amount": { "type": "number" },
        "currency": { "type": "string", "default": "AED" },
        "category": { "type": ["string", "null"] },
        "is_grocery": { "type": "boolean" },
        "is_restaurant": { "type": "boolean" }
      }
    },
    "budget": {
      "type": "object",
      "required": ["id", "month", "category", "budget_amount"],
      "properties": {
        "id": { "type": "integer" },
        "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" },
        "category": { "type": "string" },
        "budget_amount": { "type": "number", "minimum": 0 },
        "spent": { "type": "number" },
        "remaining": { "type": "number" }
      }
    }
  }
}
