{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-monthly-trends.json",
  "title": "Monthly Trends Response",
  "description": "Monthly spending trends",
  "type": "object",
  "required": ["success", "data"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "data": {
      "type": "object",
      "required": ["monthly_spending"],
      "properties": {
        "monthly_spending": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["month", "total_spent"],
            "properties": {
              "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" },
              "total_spent": { "type": "number" },
              "category_breakdown": {
                "type": "object",
                "additionalProperties": { "type": "number" }
              }
            }
          }
        }
      }
    }
  }
}
