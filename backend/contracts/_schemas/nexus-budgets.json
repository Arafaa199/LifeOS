{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-budgets.json",
  "title": "Budgets Response",
  "description": "Current month's budgets",
  "type": "object",
  "required": ["success", "data"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "data": {
      "type": "object",
      "required": ["budgets"],
      "properties": {
        "budgets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "month", "category", "budget_amount"],
            "properties": {
              "id": { "type": "integer" },
              "month": { "type": "string", "pattern": "^\\d{4}-\\d{2}$" },
              "category": { "type": "string" },
              "budget_amount": { "type": "number", "minimum": 0 },
              "spent": { "type": "number" },
              "remaining": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
