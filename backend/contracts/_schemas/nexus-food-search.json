{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nexus-food-search.json",
  "title": "Food Search Response",
  "description": "Food database search results",
  "type": "object",
  "required": ["success", "count", "data"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "count": { "type": "integer", "minimum": 0 },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "calories_per_100g"],
        "properties": {
          "id": { "type": "integer" },
          "fdc_id": { "type": ["integer", "null"] },
          "barcode": { "type": ["string", "null"] },
          "name": { "type": "string" },
          "brand": { "type": ["string", "null"] },
          "source": { "type": "string", "enum": ["usda", "openfoodfacts", "manual"] },
          "calories_per_100g": { "type": "number", "minimum": 0 },
          "protein_per_100g": { "type": ["number", "null"], "minimum": 0 },
          "carbs_per_100g": { "type": ["number", "null"], "minimum": 0 },
          "fat_per_100g": { "type": ["number", "null"], "minimum": 0 },
          "fiber_per_100g": { "type": ["number", "null"], "minimum": 0 },
          "serving_size_g": { "type": ["number", "null"], "minimum": 0 },
          "serving_description": { "type": ["string", "null"] },
          "category": { "type": ["string", "null"] },
          "data_quality": { "type": ["integer", "null"], "minimum": 1, "maximum": 5 },
          "relevance": { "type": ["number", "null"], "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
